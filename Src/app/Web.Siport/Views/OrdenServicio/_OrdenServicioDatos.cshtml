@model  Web.Siport.Models.OrdenServicio.OrdenServicioCabeceraModel
@using Trirand.Web.Mvc

<div class="form-group" id="formMain">
    <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
        @Html.LabelFor(model => model.CodigoOrdServicio, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.CodigoOrdServicio, new { @class = "form-control", @placeholder = "Código " })
    </div>

    <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
        @Html.LabelFor(model => model.CodigoCliente, new { @class = "control-label" })
        @Html.HiddenFor(model => model.IdClientes)
        <div class="input-group">
                @Html.TextBoxFor(model => model.CodigoCliente, new { @class = "form-control", @placeholder = "Cliente" })
                <span class="input-group-btn">
                    <button id="btnbuscarcliente" data-urltx='@Url.Action("ObtenerCliente")' class="btn btn-default" type="button" style="min-width:1px!important" title="Buscar Dirección">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                </span>
                @Html.TextBoxFor(model => model.NombreRazonSocial, new { @class = "form-control col-lg-7", @readonly = "@readonly" })
            
        </div>
    </div>
</div>
<div class="form-group">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @Html.LabelFor(model => model.Descripcion, new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Código Orden de Servicio" })
    </div>
</div>

<div class="container">
    <div class="pull-right">
        <button id="btnagregardestino" type="button" class="btn btn-default btn-xs" data-target="#containermodal" data-toggle="modal" data-urlmodal='@Url.Action("GetPartialDestinoModal", "OrdenServicio")'>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Agregar
        </button>
        <button id="btnquitardestino" type="button" class="btn btn-default btn-xs">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Quitar
        </button>
    </div>
</div>

<table id="listadestinosgrid" data-jsonurl='@Url.Action("JsonListarOrdenServicioDestino", null, new { pGuid = Model.IdGuid})'></table>
<div id="page"></div>


