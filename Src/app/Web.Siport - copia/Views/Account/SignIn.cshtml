@using Web.Common.HtmlHelpers;
@using Web.Siport.Models.Account;
@model SignInModel

@{
    ViewBag.Title = "SignIn";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1" />

    <title>LogOn</title>

    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/normalize.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/jquery/jquery-ui.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap/bootstrap.min.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/bootstrap.extension.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/website.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/cssview/account/signin.css")" />



</head>
<body>
    <div class="container" id="parent">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-md-offset-4 col-md-4" id="child">
                        @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { id = "form-signin", @class = "form-signin" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "alert-danger" });


                            @Html.HiddenFor(model => model.ReturnUrl);
                            <h2 class="form-signin-heading">LogOn</h2>
                            <label for="inputEmail" class="sr-only">Usuario</label>
                            @Html.TextBoxFor(model => model.CodigoUsuario, new { @class = "form-control", @placeholder = "Usuario", @required = "", @autofocus = "", @type=""  })
                            <div>&nbsp;</div>
                            <label for="inputPassword" class="sr-only">Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @required = "" })
                            <div class="checkbox">
                                <label>
                                    @Html.CheckBox("RememberMe")
                                    Recordarme
                                </label>
                            </div>
                            <button class="btn btn-lg btn-primary btn-block" type="submit">Ingresar</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>